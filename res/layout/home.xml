<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_static"
    android:gravity="top"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/layoutTrio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/trio_static" />

    <ImageButton
        android:id="@+id/gameTutorial"
        style="@style/nice_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/layoutTrio"
        android:layout_below="@+id/layoutTrio"
        android:layout_marginTop="20dp"
        android:onClick="onStartGame"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/tutorial" />

    <ImageButton
        android:id="@+id/gameClassic"
        style="@style/nice_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/gameTutorial"
        android:layout_below="@+id/gameTutorial"
        android:layout_marginTop="5dp"
        android:onClick="onStartGame"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/classic" />

    <ImageButton
        android:id="@+id/gameChallenge"
        style="@style/nice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gameClassic"
        android:layout_below="@+id/gameClassic"
        android:layout_marginTop="5dp"
        android:onClick="onStartGame"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/challenge" />

    <ImageView
        android:id="@+id/openFeintButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/layoutTrio"
        android:layout_marginRight="30dp"
        android:onClick="onOpenFeintClicked"
        android:src="@drawable/of_ll_logo" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/gameCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignRight="@+id/openFeintButton"
        android:layout_alignTop="@+id/gameTutorial"
        android:layout_marginRight="20dp"
        android:src="@drawable/square_reverse" />

</RelativeLayout>
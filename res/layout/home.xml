<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/layoutTrio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/trio" />

    <ImageView
        android:id="@+id/layoutClouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/layoutTrio"
        android:layout_marginBottom="0dp"
        android:scaleType="fitCenter"
        android:scrollY="15dp"
        android:src="@drawable/clouds" />

    <RelativeLayout
        android:id="@+id/layoutNavigation"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/gameTutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:onClick="startGame"
            android:src="@drawable/tutorial" />

        <ImageView
            android:id="@+id/gameClassic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/gameTutorial"
            android:layout_below="@+id/gameTutorial"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:onClick="startGame"
            android:src="@drawable/classic" />

        <ImageView
            android:id="@+id/gameChallenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/gameClassic"
            android:layout_below="@+id/gameClassic"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:onClick="startGame"
            android:src="@drawable/challenge" />

        <ImageView
            android:id="@+id/openFeintButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:onClick="onOpenFeintClicked"
            android:src="@drawable/ic_openfeint" />

    </RelativeLayout>

</RelativeLayout>

        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card12"
        android:layout_marginLeft="20dp"

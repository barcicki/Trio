<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/layoutClouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:scaleType="center"
        android:src="@drawable/clouds" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:onClick="onNextClicked"
        android:text="@string/tutorial_next" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/tutorial_step2_header"
        style="@style/dark_shadow"
        android:textColor="@color/yellow"
        android:textSize="24dp" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card1"
        android:layout_toRightOf="@+id/card1"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card2"
        android:layout_toRightOf="@+id/card2"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/card1"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/card2"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card4"
        android:layout_toRightOf="@+id/card4"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/card3"
        android:layout_alignTop="@+id/card5"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card3"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/card3"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card11"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card10"
        android:layout_toRightOf="@+id/card10"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card12"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/card4"
        android:layout_toRightOf="@+id/card11"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card13"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card6"
        android:layout_toLeftOf="@+id/card11"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card14"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card13"
        android:layout_centerHorizontal="true"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card15"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card14"

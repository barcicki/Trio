        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card7"
        android:layout_toRightOf="@+id/card7"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/card4"
        android:layout_toRightOf="@+id/card8"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card16"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card15"
        android:layout_toLeftOf="@+id/card8"
        android:src="@drawable/square_reverse" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card17"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/card16"
        android:layout_toRightOf="@+id/card16"
        android:src="@drawable/square_reverse" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/card4"
        android:layout_below="@+id/card4"
        android:src="@drawable/ok" />

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/card1"
        android:layout_below="@+id/card1"
        android:src="@drawable/ok" />

    <ImageView
        android:id="@+id/ImageView04"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/card13"
        android:layout_below="@+id/card13"
        android:src="@drawable/wrong" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/card10"
        android:layout_alignTop="@+id/ImageView03"
        android:src="@drawable/ok" />

    <ImageView
        android:id="@+id/ImageView05"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/card16"
        android:layout_alignTop="@+id/ImageView04"
        android:src="@drawable/wrong" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/card7"
        android:layout_alignTop="@+id/ImageView01"
        android:src="@drawable/ok" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/ImageView03"
        android:layout_alignRight="@+id/card3"
        android:layout_toRightOf="@+id/ImageView03"
        android:gravity="center"
       	style="@style/dark_shadow"
        android:text="@string/tutorial_1common"
        android:textColor="@color/yellow"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/TextView01"
        style="@style/dark_shadow"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/card12"
        android:layout_alignTop="@+id/ImageView01"
        android:layout_toRightOf="@+id/ImageView01"
        android:gravity="center"
        android:text="@string/tutorial_2common"
        android:textColor="@color/yellow"
        android:textSize="12dp" />

    <TextView
        style="@style/dark_shadow"
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/card9"
        android:layout_below="@+id/card7"
        android:gravity="center"
        android:text="@string/tutorial_3common"
        android:textColor="@color/yellow"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignTop="@+id/ImageView02"
        android:layout_toLeftOf="@+id/card10"
        android:gravity="center"
        android:text="@string/tutorial_no_common"
        android:textColor="@android:color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ImageView04"
        android:layout_toLeftOf="@+id/card7"
        android:layout_toRightOf="@+id/ImageView04"
        android:gravity="center"
        android:text="@string/tutorial_wrong_shape"
        android:textColor="@android:color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/card18"
        android:layout_alignTop="@+id/ImageView05"
        android:layout_toRightOf="@+id/ImageView05"
        android:gravity="center"
        android:text="@string/tutorial_wrong_color"
        android:textColor="@android:color/black"
        android:textSize="12dp" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:onClick="onBackClicked"
        android:text="@string/tutorial_back" />

    <com.barcicki.trio.core.CardView
        android:id="@+id/card18"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/TextView05"
        android:layout_toRightOf="@+id/card17"
        android:src="@drawable/square_reverse" />


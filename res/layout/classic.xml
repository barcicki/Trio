<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_static"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <com.barcicki.trio.core.CardGridView
            android:id="@+id/cardsContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3" >
        </com.barcicki.trio.core.CardGridView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/gamePauseButton"
                style="@style/nice_button"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:onClick="onPauseClicked"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/classic_pause" android:paddingBottom="1dp" android:paddingTop="1dp"/>

            <Button
                android:id="@+id/gameHintButton2"
                style="@style/nice_button"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:onClick="onHintClicked"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/classic_hint" android:paddingBottom="1dp" android:paddingTop="1dp"/>

            <TextView
                android:id="@+id/gameTimer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:text="00:00"
                android:textColor="@android:color/black"
                android:textSize="@dimen/clock_size" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/gamePause"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/classic_pause" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/NiceButtonStartColor" android:startColor="@color/NiceButtonEndColor" />

            <stroke android:width="@dimen/button_stroke" android:color="@color/NiceButtonBorderColor" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="@dimen/button_padding_size" android:right="@dimen/button_padding_size" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/NiceButtonEndColor" android:startColor="@color/NiceButtonStartColor" />

            <stroke android:width="@dimen/button_stroke" android:color="@color/NiceButtonBorderColor" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="@dimen/button_padding_size" android:right="@dimen/button_padding_size" android:top="10dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:angle="270" android:endColor="@color/NiceButtonDisabledEndColor" android:startColor="@color/NiceButtonDisabledStartColor" />

            <stroke android:width="@dimen/button_stroke" android:color="@color/NiceButtonBorderColor" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="@dimen/button_padding_size" android:right="@dimen/button_padding_size" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/NiceButtonEndColor" android:startColor="@color/NiceButtonStartColor" />

            <stroke android:width="@dimen/button_stroke" android:color="@color/NiceButtonBorderColor" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="@dimen/button_padding_size" android:right="@dimen/button_padding_size" android:top="10dp" />
        </shape></item>

</selector>